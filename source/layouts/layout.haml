%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %title= current_page.data.title || "j0sv porfolio"
    = stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css"
    = stylesheet_link_tag "https://fonts.googleapis.com/css?family=Inconsolata"
    = stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons"
    = stylesheet_link_tag "https://cdn.rawgit.com/konpa/devicon/df6431e323547add1b4cf45992913f15286456d3/devicon.min.css"
    = javascript_include_tag "https://code.jquery.com/jquery-3.2.1.min.js"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.0/js/materialize.min.js"
    = stylesheet_link_tag "site"
    = javascript_include_tag "site"
    :javascript
      $(document).ready(function () {

          $('.devicon').mouseenter(function () {
            $(this).addClass('colored');
          });

          $('.devicon').mouseleave(function () {
            $(this).removeClass('colored');
          });

          $(".button-collapse").sideNav();

          $('.collapsible').collapsible();

        });
  %body
    %nav.amber.accent-4.navbar-fixed
      .nav-wrapper
        %a.brand-logo{:href => "/"} &nbsp;Jonas Svensson
        %a.button-collapse{{data: {activates: 'mobile', href: '#'}}}
