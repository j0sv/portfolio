        %ul.right.hide-on-med-and-down
          %li
            %a{href: "/"} About me
          %li
            %a{href: "projects.html"} Projects
          %li
            %a{href: "experience.html"} Experience
          %li
            %a{href: "contact.html"} Contat me
        %ul#mobile.side-nav
          %li
            .user-view
              .background
                %img{:src => "images/jonas.jpg"}/
              %a{:href => "#!user"}
                %img.circle{:src => "images/jonas.jpg"}/
              %a{:href => "#!name"}
                %span.white-text.name Jonas Svensson
              %a{:href => "#!email"}
                %span.white-text.email svensson.jonas@gmail.com
          %li
            %a{:href => "#!"} About me
          %li
            %a{:href => "#!"} Projects
          %li
            %a{:href => "#!"} Experience
          %li
            %a{:href => "#!"} Contact me

